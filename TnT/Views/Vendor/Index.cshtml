@model IEnumerable<TnT.Models.Vendor.M_Vendor>

@{
    ViewBag.Title = "Vendors";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<h2>
    LLCs 
    <a style="float: right; margin-right: 5px;" href='@Url.Action("Create","Vendor")' class="btn btn-info btn-icon icon-left">
        Create LLC
        <i class="fa fa-user-plus"></i>
    </a>

 
 </h2>





<table class="table table-bordered datatable" id="table-1">
    <thead>
        <tr>
            <th>
                Company
            </th>
            <th>
                Contact Person
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Email
            </th>
           
            @*<th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
            <th>
                API Key
            </th>
            <th>Actions</th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
               
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.ServiceKey)
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="View" href='@Url.Action("Details","Vendor", new { id = item.Id })'> <i class="entypo-doc-text-inv"></i> View</a>
                            </li>
                            <li>
                                <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="Edit" href='@Url.Action("Edit","Vendor", new { id = item.Id })'> <i class="entypo-pencil"></i> Edit</a>
                            </li>
                            <li>
                                <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="Delete" href='@Url.Action("Delete","Vendor", new { id = item.Id })'> <i class="entypo-trash"></i> Delete</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

</table>

<div id="dummyModal" role="dialog" class="modal fade" data-url='@Url.Action("VCreate","Vendor")'>

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" class="close">&times;</button>
                <h4 class="modal-title">Vendor Registration</h4>
            </div>
            <div class="modal-body">
                <div id='gameContainer'>
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
      $('document').ready(function () {
          $('#btnTest').click(function () {

              var url = $('#dummyModal').data('url');

              $.get(url, function (data) {
                  $('#gameContainer').html(data);

                  $('#dummyModal').modal('show');
              });


        });
      });
</script>


