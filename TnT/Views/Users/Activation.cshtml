@model TnT.Models.Account.Users

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<h2>
  @TnT.LangResource.GlobalRes.UsersActivation
    <a style="float: right; margin-right: 5px;" href='@Url.Action("Index","Users")' class="btn btn-danger btn-icon icon-left">
        @TnT.LangResource.GlobalRes.cmnBtnBackToList
        <i class="fa fa-reply"></i>
    </a>
</h2>

@using (Html.BeginForm("Activation", "Users",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal margin-top-none" id="frmUsr">       

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)       

        <div class="form-group">
            @Html.LabelFor(model => model.UserName1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top: 6px;">
                @Html.DisplayFor(model => model.UserName1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top: 6px;">
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control"  }  })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-2 popover-default", @data_toggle = "popover", @data_trigger = "hover", data_placement = "top", @data_content = TnT.LangResource.GlobalRes.ToolTipUserActive, @data_original_title = "Field Information" })
            <div class="col-sm-1" style="padding-top: 6px;">
                @Html.CheckBoxFor(model => model.Active, new { htmlAttributes = new { @class = "form-control" } })              
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-info" value=@TnT.LangResource.GlobalRes.cmnBtnSave />
            </div>
        </div>

    </div>
}





<script>
    $(document).ready(function () {
        $('#frmUsr input[type=text], input[type=password]').val("");
    });
</script>

<script type="text/javascript">
    function Validate() {
        var password = document.getElementById("Password").value;
        var confirmPassword = document.getElementById("ConfirmPassword").value;
        if (password != confirmPassword) {
            alert("@TnT.LangResource.GlobalRes.toastrSettingChgPwdnotMatch.");
            return false;
        }
        return true;
    }
</script>