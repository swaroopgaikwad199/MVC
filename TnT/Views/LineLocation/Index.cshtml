@model IEnumerable<TnT.Models.Job.LineLocation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<h2>
    @TnT.LangResource.GlobalRes.LineLocationIndex
    <a style="float: right; margin-right: 5px;" href='@Url.Action("Create","LineLocation")' class="btn btn-info btn-icon icon-left">
       @TnT.LangResource.GlobalRes.LineLocationIndexBtnCreate
        <i class="fa fa-server"></i>
    </a>
</h2>


<table class="table table-bordered datatable" id="table-1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DivisionCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineIP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DBName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.SQLUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SQLPassword)
            </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocationCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DivisionCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlantCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LineCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LineIP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DBName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.SQLUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SQLPassword)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>*@
        <td>
            <div class="btn-group">
                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                    @TnT.LangResource.GlobalRes.SOMIndexAction <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="@TnT.LangResource.GlobalRes.SOMIndexView" href='@Url.Action("Details","LineLocation",  new {id = item.ID})'> <i class="entypo-doc-text-inv"></i> @TnT.LangResource.GlobalRes.SOMIndexView</a>
                    </li>
                    <li>
                        <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="@TnT.LangResource.GlobalRes.SOMIndexEdit" href='@Url.Action("Edit","LineLocation",  new {id = item.ID})'> <i class="entypo-pencil"></i> @TnT.LangResource.GlobalRes.SOMIndexEdit</a>
                    </li>
                    <li>
                    <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="@TnT.LangResource.GlobalRes.LineLocationDelete" href='@Url.Action("Delete","LineLocation",  new {id = item.ID})'> <i class="entypo-trash"></i> @TnT.LangResource.GlobalRes.LineLocationDelete</a>
                </li>
                </ul>
            </div>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
        </td>
    </tr>
}

</table>

