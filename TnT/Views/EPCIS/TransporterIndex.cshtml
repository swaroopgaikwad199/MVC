@model IEnumerable<TnT.Models.EPCIS.M_Transporter>

@{
    ViewBag.Title = "TransporterIndex";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<h2>
    @TnT.LangResource.GlobalRes.EpcisTransporterIndex
    <a style="float: right; margin-right: 5px;" href='@Url.Action("TransporterCreate","EPCIS")' class="btn btn-info btn-icon icon-left">
        @TnT.LangResource.GlobalRes.SOMIndexCreateNew
        <i class="fa fa-server"></i>
    </a>
</h2>

<table  class="table table-bordered datatable" id="table-1">
    <thead>
<th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                    @TnT.LangResource.GlobalRes.JobsIndexAction <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="View" href='@Url.Action("TranspoterDetail","EPCIS",  new {id = item.ID})'> <i class="entypo-doc-text-inv"></i> @TnT.LangResource.GlobalRes.SOMIndexView</a>
                    </li>
                    <li>
                        <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="Edit" href='@Url.Action("TransporterEdit","EPCIS",  new {id = item.ID})'> <i class="entypo-pencil"></i> @TnT.LangResource.GlobalRes.SOMIndexEdit</a>
                    </li>
                    @*<li>
                    <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="Delete" href='@Url.Action("Delete","Jobs",  new {id = item.JID})'> <i class="entypo-trash"></i> Delete</a>
                </li>*@
                </ul>
            </div>
        </td>
    </tr>
}

</table>
