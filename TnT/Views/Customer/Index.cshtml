@model IEnumerable<TnT.Models.Customer.M_Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<h2>
    @TnT.LangResource.GlobalRes.CreateCustomerMaster
    <a style="float: right; margin-right: 5px;" href='@Url.Action("Create","Customer")' class="btn btn-info btn-icon icon-left">
        @TnT.LangResource.GlobalRes.CreateCustomer
        <i class="fa fa-server"></i>
    </a>
</h2>


<table class="table table-bordered datatable" id="table-1">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>

        <th></th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.M_Country.CountryName)
            </td>

            <td>
                <div class="btn-group">
                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                        @TnT.LangResource.GlobalRes.JobsIndexAction <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="@TnT.LangResource.GlobalRes.SOMIndexView" href='@Url.Action("Details","Customer",  new {id = item.Id})'> <i class="entypo-doc-text-inv"></i> @TnT.LangResource.GlobalRes.SOMIndexView</a>
                        </li>
                        <li>
                            <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title=@TnT.LangResource.GlobalRes.SOMIndexEdit href='@Url.Action("Edit","Customer",  new {id = item.Id})'> <i class="entypo-pencil"></i> @TnT.LangResource.GlobalRes.SOMIndexEdit</a>
                        </li>
                        @*<li>
                    <a class="tooltip-primary" data-toggle="tooltip" data-placement="top" title data-original-title="Delete" href='@Url.Action("Delete","Jobs",  new {id = item.JID})'> <i class="entypo-trash"></i> Delete</a>
                </li>*@
                    </ul>
                </div>
               
            </td>
        </tr>
    }

</table>
